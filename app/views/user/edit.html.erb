<h1 class="headline text-center">My Profile</h1>
<br>



<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6">
      <%= bootstrap_form_for :user do |f| %>
        <%= f.text_field :name%>
        <%= f.email_field :email%>
        <p><strong>Password: </strong>************</p>
        <!-- <%= f.password_field :password_digest %> -->
        <%= f.collection_select :location_id, @locations, :id, :name %>
        <%= f.collection_select :default_course_id, @courses, :id, :name %>
        <%= f.text_field :photo %>
        <p><strong>Privileges: </strong><%= @current_user.privilege %></p>
        <p><strong>Points: </strong><%= @current_user.points %></p>
        <%= f.submit "Save", class: 'btn default-btn'%>
      <% end %>
    </div>
    <div class="col-xs-12 col-sm-6">
      <div class="text-center">
        <% if @current_user.photo == nil %>
          <%= image_tag 'default-user-image.png',  class: 'profile-pic' %>
        <% else %>
          <img src="<%= @current_user.photo %>">
        <% end%>
        <br><br>
      </div>
    </div>
  </div>
</div>
