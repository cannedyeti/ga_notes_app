<div class="col-xs-8 col-xs-offset-2 text-left">
<h1>Signup</h1>
  <%= bootstrap_form_for :user do |p| %>
    <%= p.text_field :name, placeholder: "Enter your name"  %>
    <%= p.email_field :email, placeholder: "Enter your email"  %>
    <%= p.password_field :password, placeholder: "Enter your password"  %>
    <%= p.collection_select :default_course_id, @courses, :id, :name %>
    <%= p.collection_select :location_id, @locations, :id, :name %>
    <%= p.primary "Submit", class: 'btn default-btn' %>
  <% end %>
</div>