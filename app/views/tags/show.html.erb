<h1 class="headline text-center">#<%= @tag.tag_name %></h1>
<div class="container">

  <% if @notes.length >= 1 %>
    <% @notes.each do |n| %>
          <div class="well">
            <a class="note-link" href="/notes/<%=n.id%>">
              <h3><%= n.title %></h3>
            </a>
            by <%=n.user.name%> on <%= n.created_at.strftime("%b %d %Y at %l:%M %p") %>
            <br><br>
            <% n.tags.each do |t| %>
              <a class="tag" href="/find/<%=t.id %>">#<%=t.tag_name%></a>
            <% end %>
          </div>
    <% end %>

  <% else %>
    <h1>NOTHING</h1>
  <% end %>
</div>
  