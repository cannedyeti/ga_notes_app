<h1 class="fiji-font text-center"><%= @note.title %></h1>
<br>

<div class="container mary-poppins-font">
  <%= bootstrap_form_for @note do |n| %>
    <%= n.text_field :title, class: 'form-field sign-in-field' %>
    <%= n.text_area :content, :class => "tinymce", :rows => 10, :cols => 100 %>
    <%= tinymce %>
    <%= n.collection_select :course_id, @courses, :id, :name, {:selected => @note.course_id}, class: 'form-field sign-in-field' %>
    <%= n.text_field :tag_ids, placeholder: "Add more comma-separated tags", value: "", class: 'form-field sign-in-field' %>
    Click on a tag to remove it
    <div>
      <% @note.tags.each do |t| %>
        <%= link_to "##{t.tag_name}", "/tags/" + @note.id.to_s + "/" + t.id.to_s, class: 'tag', method: :delete%>
      <% end %>
    </div>
    <br>
    <%= n.submit "Submit Changes", class: 'btn btn-grey'%>
  <% end %>


</div>
